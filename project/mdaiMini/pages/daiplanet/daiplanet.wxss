}
.headerImg image{
   width: 80rpx;
   height:80rpx;
   border-radius: 100rpx
}
.nickname{
  font-size: 14px;
}
.commentText,.thumb text{
  font-size: 12px;
  line-height: 12px;
  color: #333;
}
.content{
  flex: 6;
  box-sizing: border-box;
  padding: 0 10px;
}
.thumb{
  flex: 1;
}
.row{
